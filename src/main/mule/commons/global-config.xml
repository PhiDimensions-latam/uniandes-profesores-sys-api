<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns:spring="http://www.mulesoft.org/schema/mule/spring"
	xmlns:secure-properties="http://www.mulesoft.org/schema/mule/secure-properties"
	xmlns:db="http://www.mulesoft.org/schema/mule/db"
	xmlns:apikit="http://www.mulesoft.org/schema/mule/mule-apikit"
	xmlns:http="http://www.mulesoft.org/schema/mule/http"
	xmlns="http://www.mulesoft.org/schema/mule/core"
	xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
http://www.mulesoft.org/schema/mule/mule-apikit http://www.mulesoft.org/schema/mule/mule-apikit/current/mule-apikit.xsd 
http://www.mulesoft.org/schema/mule/http http://www.mulesoft.org/schema/mule/http/current/mule-http.xsd http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
http://www.mulesoft.org/schema/mule/db http://www.mulesoft.org/schema/mule/db/current/mule-db.xsd
http://www.mulesoft.org/schema/mule/secure-properties http://www.mulesoft.org/schema/mule/secure-properties/current/mule-secure-properties.xsd
http://www.mulesoft.org/schema/mule/spring http://www.mulesoft.org/schema/mule/spring/current/mule-spring.xsd">
	<http:listener-config
		name="uniandes-profesores-sys-api-raml-httpListenerConfig">
		<http:listener-connection host="0.0.0.0"
			port="8081" />
	</http:listener-config>
	<apikit:config
		name="uniandes-profesores-sys-api-raml-config"
		api="resource::1f8ff72e-d631-469d-978e-aa297c2266ca:uniandes-profesores-sys-api-raml:1.0.1:raml:zip:uniandes-profesores-sys-api-raml.raml"
		outboundHeadersMapName="outboundHeaders"
		httpStatusVarName="httpStatus" />
	<db:config name="Database_Config" doc:name="Database Config"
		doc:id="171fda0e-475d-4582-9a60-a8f8284f8046">
		<db:oracle-connection
			host="${dataBaseConfig.host}" port="${dataBaseConfig.port}"
			user="${dataBaseConfig.user}"
			password="${secure::dataBaseConfig.dataBasePassword}"
			serviceName="${dataBaseConfig.serviceName}" />
	</db:config>
	<secure-properties:config
		name="Secure_Properties_Config" doc:name="Secure Properties Config"
		doc:id="cd3d8a61-b9b0-4aa2-b029-0250fb3cb48e"
		file="secureProperties/secure-${env}-properties.yaml"
		key="${secure.key}">
		<secure-properties:encrypt
			algorithm="Blowfish" />
	</secure-properties:config>
	<http:request-config
		name="HTTP_Request_configuration"
		doc:name="HTTP Request configuration"
		doc:id="968ccda7-21fa-445b-abd8-2424c9dd2989"
		basePath="${requestConfig.basePath}">
		<http:request-connection
			protocol="${requestConfig.protocol}" host="${requestConfig.host}"
			port="${requestConfig.port}"
			maxConnections="${requestConfig.maxConnections}"
			connectionIdleTimeout="${requestConfig.connectionIdleTimeout}"
			responseBufferSize="${requestConfig.responseBufferSize}" />
	</http:request-config>
	<configuration-properties
		doc:name="Configuration properties"
		doc:id="83b27213-5800-4f83-8bbd-ea53339aaaeb"
		file="properties/${env}-properties.yaml" />
	<configuration doc:name="Configuration"
		doc:id="e419921a-7b7d-4b7b-baf5-f45725d2d96f"
		defaultErrorHandler-ref="errorError_Handler" />
	<spring:config name="Spring_Config"
		doc:name="Spring Config" doc:id="08193e65-dfe2-4f96-86fb-196ee3d0b626"
		files="beans.xml" />
	<spring:security-manager
		doc:name="Spring Security manager"
		doc:id="af6b3bfb-8ef8-4c3e-a5ee-522208a67e3f">
		<spring:delegate-security-provider
			name="auth-manager" delegate-ref="authenticationManager" />
	</spring:security-manager>
</mule>
